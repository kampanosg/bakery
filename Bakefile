version: 1.1.0
metadata:
    author: kampanosg
default:
    - test
recipes:
    clean:
        description: "deletes executable"
        steps:
            - "rm bake"
    test:
        description: "test the code with go test"
        steps:
            - "go test -cover -parallel 1 ./..."
    build:
        description: "builds the code with go"
        steps:
            - "^ clean"
            - "go build -o bake bakery.go"
